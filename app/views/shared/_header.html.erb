<ul class="header">
    <li><%= link_to "StackUnderFlow", questions_path %></li>
    <li><%= link_to "Ask A Questions", new_question_path %></li>
     <% if logged_in? %>
       <li><%= link_to "Logout", logout_path %></li>
       <li><%= link_to "My Favorites", favorite_user_path(current_user.id) %></li>
       <li><%= image_tag("#{current_user.photo}", size: '30')%> <%= link_to "#{current_user.handle.capitalize}", user_path(current_user.id) %></li>
    <% else %>
      <li><%= link_to "Sign up", new_user_path %></li>
      <li><%= link_to "Login", login_path %></li>
    <% end %>
</ul>