
<h1> Create User </h1>
<%= form_for :user, url: users_path do |f| %>
  <p>
    <%= f.label :handle %><br>
    <%= f.text_field :handle %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>
  
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password%>
  </p>

  <p>
    <%= f.label :confirm_password %><br>
    <%= f.password_field :password_confirmation%>
  </p>


  <p>
    <%= f.submit "Create User" %>
  </p>
<% end %>

<p><strong>Create auser through one of these services:</strong></p>

